<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">
    <ImageButton
        android:id="@+id/thirdpagebackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:text="Detail"
        android:textColor="#2F2D2C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/thirdpagebackbutton"
        app:layout_constraintTop_toTopOf="@+id/thirdpagebackbutton" />

    <ImageView
        android:id="@+id/detailedcofeeimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cardimagedetailedview"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Details"
        />

    <TextView
        android:id="@+id/cofeename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="Cappucino"
        android:textStyle="bold"
        android:textColor="#2F2D2C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/withwhat"
        app:layout_constraintTop_toBottomOf="@id/detailedcofeeimage"
        />

    <TextView
        android:id="@+id/withwhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="with Chocolate"
        android:textColor="#9B9B9B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cofeename"
        />
    <ImageView
        android:id="@+id/starthird"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_star_24"
        app:tint="#FFC107"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/withwhat"
        app:layout_constraintTop_toBottomOf="@id/withwhat"
        app:layout_constraintEnd_toStartOf="@id/scorethirdpage"/>
    <TextView
        android:id="@+id/scorethirdpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.8"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/starthird"
        app:layout_constraintTop_toTopOf="@id/starthird"
        app:layout_constraintEnd_toStartOf="@id/manypeople"
        app:layout_constraintBottom_toBottomOf="@id/starthird"
        />
    <TextView
        android:id="@+id/manypeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(230)"
        android:textSize="10sp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/scorethirdpage"
        app:layout_constraintTop_toTopOf="@id/scorethirdpage"
        app:layout_constraintBottom_toBottomOf="@id/scorethirdpage"
        />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EAEAEA"
            app:layout_constraintStart_toStartOf="@id/manypeople"
            app:layout_constraintEnd_toEndOf="@id/detailedcofeeimage"
            app:layout_constraintTop_toBottomOf="@id/manypeople"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
           />
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="@id/line"
        />
    <TextView
        android:id="@+id/desctext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A cappuccino is an approximately 150 ml (5 oz) beverage, with 25 ml of espresso coffee and 85ml of fresh milk the fo.."
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="@id/description"
        app:layout_constraintEnd_toEndOf="@id/detailedcofeeimage"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:text="Read More"
        android:textColor="#C67C4E"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/desctext"
        app:layout_constraintTop_toTopOf="@id/desctext" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/desctext"
        app:layout_constraintStart_toStartOf="@id/detailedcofeeimage"
    />


    <TextView
        android:id="@+id/Bottom_Navbar_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9B9B9B"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:text="testes"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/size"
        />
    <TextView
        android:id="@+id/Bottom_Detailed_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/Bottom_Navbar_Text"
        app:layout_constraintStart_toStartOf="@id/Bottom_Navbar_Text"
        android:textColor="#C67C4E"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_buy_now"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        app:backgroundTint="#C67C4E"
        app:cornerRadius="12dp"
        android:text="Buy Now"
        android:layout_marginStart="42dp"
        app:layout_constraintTop_toTopOf="@id/Bottom_Navbar_Text"
        app:layout_constraintStart_toEndOf="@id/Bottom_Navbar_Text"
        app:layout_constraintEnd_toEndOf="@id/detailedcofeeimage"
        />


</androidx.constraintlayout.widget.ConstraintLayout>